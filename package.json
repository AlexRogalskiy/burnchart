{
  "name": "burnchart",
  "version": "4.0.0-alpha",
  "description": "GitHub Burndown Chart as a Service",
  "author": "Radek Stepan <dev@radekstepan.com> (http://radekstepan.com)",
  "license": "AGPL-3.0",
  "homepage": "http://radekstepan.com/burnchart",
  "bin": {
    "burnchart": "./bin/burnchart.js"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css watch-js",
    "build": "npm-run-all build-css build-js",
    "build-js": "react-scripts build",
    "watch-js": "react-scripts start",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "test": "CI=true react-scripts test --env=jsdom",
    "watch-test": "react-scripts test --env=jsdom",
    "coverage": "npm test -- --coverage"
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 5.8.0"
  },
  "dependencies": {
    "@rematch/core": "0.5.2",
    "argparse": "1.0.10",
    "classnames": "2.2.5",
    "colors": "1.2.1",
    "d3": "3.5.12",
    "d3-tip": "0.6.7",
    "firebase": "5.2.0",
    "history": "4.7.2",
    "immer": "2.0.0",
    "lscache": "1.0.5",
    "marked": "0.3.19",
    "moment": "2.22.1",
    "node-sass-chokidar": "1.1.0",
    "node-static": "0.7.10",
    "normalize.css": "8.0.0",
    "npm-run-all": "4.1.2",
    "object-path": "0.11.4",
    "path-to-regexp": "2.2.0",
    "qs": "6.5.1",
    "react": "16.0.0",
    "react-autosuggest": "9.3.4",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "semver": "5.5.0",
    "sort-by": "1.2.0",
    "sortedindex-compare": "0.0.1",
    "superagent": "3.8.2"
  },
  "devDependencies": {
    "react-scripts": "2.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/radekstepan/burnchart.git"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
